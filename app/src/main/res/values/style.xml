<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">27sp</item>
        <item name="android:insetBottom">0dp</item>

    </style>
    
    <style name="Grey_button" parent="Base_button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/grey</item>
    </style>

    <style name="Orange_button" parent="Base_button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Darkgrey_button" parent="Base_button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dark_grey</item>
    </style>

</resources>